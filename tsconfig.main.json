{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2021.intl"],
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".eslintrc.js"
  ],
  "compileOnSave": false
}
