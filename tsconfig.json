{
  "extends": "./tsconfig.main.json",
  "include": [
    ".eslintrc.js",
    "./src/**/*",
    "./features/step_definitions/cucumber.steps.ts",
    "./features/step_definitions/file.steps.ts",
    "./features/step_definitions/report.steps.ts",
    "./features/step_definitions/dummy.steps.ts",

    "./features/declarations/**/*",
    "./features/support/**/*",
    "./index.ts"
  ],
  "compilerOptions": {
    "types": [
      "node",
      "chai",
      "@cucumber/cucumber"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist"
  }
}
